---
export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'Imperial Central Security Databank - Star Wars fan story archive', ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <!-- SEO Meta Tags -->
    <title>ICSD — {title}</title>
    <meta name="description" content={description} />

    <!-- OpenGraph Meta Tags -->
    <meta property="og:title" content={`ICSD — ${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    {ogImage && <meta property="og:image" content={new URL(ogImage, Astro.site)} />}

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`ICSD — ${title}`} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Oswald:wght@400;500;600&family=Roboto+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-ic-bg text-ic-mute font-body">
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-ic-panel focus:text-white focus:outline-none focus:ring-2 focus:ring-ic-alert">
      Skip to content
    </a>

    <!-- Navigation -->
    <nav class="border-b border-ic-line bg-ic-panel">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo / Site Title -->
          <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
            <span class="text-xl font-label tracking-wider text-white uppercase">
              <span class="text-ic-alert">ICSD</span> Central
            </span>
          </a>

          <!-- Navigation Links -->
          <div class="flex space-x-6">
            <a href="/" class="text-sm font-label uppercase tracking-wide hover:text-white transition-colors">Home</a>
            <a href="/stories" class="text-sm font-label uppercase tracking-wide hover:text-white transition-colors">Stories</a>
            <a href="/characters" class="text-sm font-label uppercase tracking-wide hover:text-white transition-colors">Characters</a>
            <a href="/about" class="text-sm font-label uppercase tracking-wide hover:text-white transition-colors">About</a>
          </div>
        </div>
      </div>

      <!-- Scan-line divider -->
      <div class="h-px bg-gradient-to-r from-transparent via-ic-alert to-transparent opacity-30"></div>
    </nav>

    <!-- Main Content -->
    <main id="main-content" class="min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-ic-line bg-ic-panel mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
          <!-- Footer Left -->
          <div class="text-sm font-mono text-ic-mute">
            <p>IMPERIAL CENTRAL SECURITY DATABANK</p>
            <p class="text-xs mt-1">Fan project • Not affiliated with Lucasfilm Ltd.</p>
          </div>

          <!-- Footer Right -->
          <div class="text-xs font-mono text-ic-alert">
            ⚠️ UNAUTHORIZED ACCESS LOGGED
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Screen reader only utility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
