---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'Imperial Central Security Databank - Star Wars fan story archive',
  ogImage,
} = Astro.props;

const site = Astro.site;
const canonicalURL = site ? new URL(Astro.url.pathname, site) : null;
const ogImageURL = ogImage
  ? site
    ? new URL(ogImage, site).toString()
    : ogImage
  : null;

// Get base URL for subdirectory deployment
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    {canonicalURL && <link rel="canonical" href={canonicalURL.toString()} />}

    <!-- SEO Meta Tags -->
    <title>ICSD — {title}</title>
    <meta name="description" content={description} />

    <!-- OpenGraph Meta Tags -->
    <meta property="og:title" content={`ICSD — ${title}`} />
    <meta property="og:description" content={description} />
    {canonicalURL && <meta property="og:url" content={canonicalURL.toString()} />}
    <meta property="og:type" content="website" />
    {ogImageURL && <meta property="og:image" content={ogImageURL} />}

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`ICSD — ${title}`} />
    <meta name="twitter:description" content={description} />
    {ogImageURL && <meta name="twitter:image" content={ogImageURL} />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:wght@400;500;600;700&family=Rajdhani:wght@400;500;600;700&family=Roboto+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="text-white font-body min-h-screen">
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-ic-panel focus:text-white focus:outline-none focus:ring-2 focus:ring-ic-alert">
      Skip to content
    </a>

    <!-- Navigation -->
    <nav class="sticky top-0 z-20 border-b border-ic-line/60 bg-black/80 backdrop-blur">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo / Site Title (Easter Egg: Click emblem for Kestrel) -->
          <a href={base} class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
            <span class="relative flex items-center space-x-3">
              <a href={`${base}/stories/kestrel`} class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-ic-line/80 bg-black/70 shadow-[0_0_15px_rgba(217,58,58,0.25)] hover:shadow-[0_0_25px_rgba(217,58,58,0.5)] transition-all group" title="Access Classified Dossier">
                <img
                  src={`${base}/images/imperial-emblem.svg`}
                  alt="Imperial crest"
                  class="h-6 w-6 group-hover:opacity-80"
                  loading="lazy"
                />
              </a>
              <span class="text-xl sm:text-3xl md:text-4xl font-label uppercase text-white whitespace-nowrap tracking-[0.1em] sm:tracking-[0.18em] md:tracking-[0.22em] flex-shrink-0">
                Imperial Central Security Databank
              </span>
            </span>
          </a>

          <!-- Navigation Links -->
          <div class="flex space-x-6">
            <a
              href={base}
              class={`text-sm font-label uppercase tracking-[0.4em] text-ic-mute hover:text-white transition-colors ${Astro.url.pathname === base || Astro.url.pathname === `${base}/` ? 'opacity-0 pointer-events-none' : ''}`}
            >
              Archive
            </a>
          </div>
        </div>
      </div>

      <!-- Scan-line divider -->
      <div class="h-[2px] bg-gradient-to-r from-transparent via-ic-alert/70 to-transparent opacity-60"></div>
    </nav>

    <!-- Main Content -->
    <main id="main-content" class="min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-ic-line/40 bg-black/80">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <div class="flex flex-col md:flex-row justify-between items-center space-y-6 md:space-y-0">
          <!-- Footer Left -->
          <div class="text-sm font-mono text-ic-mute tracking-[0.4em] uppercase">
            <p>Imperial Central Security Databank</p>
            <!-- Easter Egg: Hidden authorization -->
            <p class="text-[0.5rem] mt-2 tracking-[0.2em] opacity-0 hover:opacity-100 transition-opacity duration-500 cursor-default">
              AUTHORIZED BY: ISB ANALYST V.K.
            </p>
          </div>

          <!-- Footer Right -->
          <div class="text-xs font-mono text-ic-alert tracking-[0.6em] uppercase">
            ⚠️ Unauthorized Access Logged
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Screen reader only utility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
